@{ 
    List<Shop.Models.Producto> lstProductos = new List<Shop.Models.Producto>();
    lstProductos = (List<Shop.Models.Producto>)Session["lstProductos"];
}

    @foreach (Shop.Models.Producto oPro in lstProductos)
    {
        <div class="col-md-6 col-lg-3 text-center animate-box" style="opacity:100">
            <div class="product">
                <div class="product-grid" style="background-image:url(../../Content/images/@oPro.Imagen.First().ruta);">
                    <div class="inner">
                        <p>
                            <a href="@Url.Action("ProductDetail", "Product")" class="icon"><i class="fa fa-shopping-cart"></i></a>
                            <a href="@Url.Action("ProductDetail", "Product")" class="icon"><i class="fa fa-eye"></i></a>
                        </p>
                    </div>
                </div>
                <div class="desc">
                    <h3><a href="@Url.Action("ProductDetail", "Product")">@oPro.nombre</a></h3>
                    <span class="price">$350</span>
                </div>
            </div>
        </div>
    }

