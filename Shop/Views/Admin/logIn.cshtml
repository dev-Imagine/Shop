@{
    ViewBag.Title = "Log In";
}
<header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner" style="background-image:url(../../Content/images/img_bg_2.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
                <div class="display-t">
                    <div class="display-tc animate-box" data-animate-effect="fadeIn">
                        <h1>Bienvenido administrador</h1>
                        <h2>Inicia sesion</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="fh5co-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12 animate-box" style="text-align:center">
                <h3>Datos de ingreso</h3>
                <form method="post" action="@Url.Action("LogIn","Admin")">
                    <div class="row form-group">
                        <div class="col-md-12">
                            <!-- <label for="fname">First Name</label> -->
                            <input type="text" name="oUser.nombreUsuario" id="nombreUsuario" class="form-control" placeholder="Usuario">
                        </div>
                        <div class="col-md-12">
                            <!-- <label for="lname">Last Name</label> -->
                            <input type="password" name="oUser.contraseña" id="passwordUsuario" class="form-control" placeholder="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
